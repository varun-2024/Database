<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User List</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        /* Full viewport height */
      }
      h1 {
        color: #333;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }
      th,
      tr,
      td {
        border: 1px solid #8e8e8e;
        padding: 8px;
        text-align: left;
      }
      th {
        background-color: #f2f2f2;
      }
      tr:nth-child(even) {
        background-color: #f9f9f9;
      }
      tr:hover {
        background-color: #ddd;
      }
      td:hover {
        color: #333;
        background-color: cadetblue;
      }
      button {
        background-color: cadetblue;
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
      }
      button:hover {
        background-color: #5a9;
      }
      a {
        text-decoration: none;
      }
      .top {
        position: fixed;
        bottom: 20px;
        left: 20px;
        color: #333;
        background-color: #fff;
        box-shadow: 10px 2px 5px rgba(0, 0, 0, 0.2);
      }
    </style>
  </head>
  <body id="top">
    <h1>User List</h1>
    <a href="/"><button>Back</button></a>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Username</th>
          <th>Email</th>
          <th>Password</th>
        </tr>
      </thead>
      <tbody>
        <% for (let i = 0; i < users.length; i++) { %>
        <tr>
          <td><%= users[i].id %></td>
          <td><%= users[i].username %></td>
          <td><%= users[i].email %></td>
          <td><%= users[i].password %></td>
          <td>
            <form method="GET" action="/user/<%= users[i].id %>/edit">
              <button
                style="background-color: #fff; color: #333"
                onmouseover="this.style.backgroundColor='#fff';"
                onmouseout="this.style.backgroundColor='#fff';"
              >
                Edit
              </button>
            </form>
          </td>
          <td>
            <form
              method="GET"
              action="/user/<%= users[i].id %>/delete"
              onsubmit="return confirm('Are you sure you want to delete this user?');"
            >
              <button
                style="background-color: #fff; color: #333"
                onmouseover="this.style.backgroundColor='#fff';"
                onmouseout="this.style.backgroundColor='#fff';"
              >
                Delete
              </button>
            </form>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <a class="top" href="#top"><button>Top</button></a>
  </body>
</html>
